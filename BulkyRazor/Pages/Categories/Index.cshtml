@page
@model BulkyRazor.Pages.Categories.IndexModel



<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/categories/Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create new Category
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Category Name</th>
                <th >Display Order</th>
                <th class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in  Model.categories.OrderBy(u => u.Displayorder))
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.Displayorder
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">

                            <a asp-page="/categories/Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"> <i class="bi bi-pencil-fill"></i>  Edit</a>
                            <a asp-page="/categories/Delete"  asp-route-id="@obj.Id" class="btn btn-danger mx-2 text"> <i class="bi bi-trash"></i>  Delete</a>
                        </div>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
